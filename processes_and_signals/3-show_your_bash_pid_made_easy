#!/usr/bin/env bash
# This script displays the PID and process name of processes containing the word "bash"

# Get the list of processes and their details from the /proc directory
process_list=$(</proc/*/cmdline)

# Loop through each process and filter those containing the word "bash"
while IFS= read -r line; do
    if [[ $line =~ .*bash.* ]]; then
        # Extract PID and process name
        pid=$(echo "$line" | awk -F'/' '{print $3}')
        process_name=$(tr '\0' ' ' </proc/"$pid"/cmdline)
        echo "$pid $process_name"
    fi
done <<< "$process_list"
